<!doctype html>
<html lang="en">
  <head>
    {% render "shared/head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="min-h-screen bg-cloud font-body text-slate {{ page.layout }} {{ page.page_class }}">
    {% render "shared/navbar", page: page, navigation: site.data.navigation %}
    {% render "shared/topbar" %}

    <main>
      {{ content }}
    </main>

    {% render "shared/footer", metadata: site.metadata %}
  </body>
</html>
