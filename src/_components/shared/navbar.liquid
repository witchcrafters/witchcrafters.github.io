<header class="bg-white">
  <nav class="max-w-screen-xl mx-auto nav flex flex-wrap items-center justify-between px-4">
    <div class="flex flex-no-shrink items-center mr-6 py-3 text-grey-darkest">
      {% svg "assets/img/brand/witchcraft-icon.svg" height=36 %}
      <a href="/"><span class="p-2 font-bold text-xl tracking-tight">Witchcraft</span></a>
    </div>

    <input class="menu-btn hidden" type="checkbox" id="menu-btn">
    <label class="menu-icon block cursor-pointer md:hidden px-2 py-4 relative select-none" for="menu-btn">
      <span class="navicon bg-grey-darkest flex items-center relative"></span>
    </label>

    <ul class="menu flex justify-end list-reset m-0 w-full md:w-auto pb-4 md:pb-0">
      {% for navigation in navigation %}
        <li>
          <a href="{{ navigation.link }}" class="text-right block md:inline-block px-3 py-3 no-underline">
             {{ navigation.name }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>

  {% render "shared/topbar" %}
</header>
